@page
@model Asp_Identity.Pages.RegisterModel
@{
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
        <h1 class="mb-5">Register Here</h1>

        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-3">
                <label class="form-label" asp-for="RegModel.Email">Email Address</label>
                <input type="text" class="form-control" asp-for="RegModel.Email" />
                <span asp-validation-for="RegModel.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="RegModel.Password">Password</label>
                <input type="password" class="form-control" asp-for="RegModel.Password" />
                <span asp-validation-for="RegModel.Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="RegModel.ConfirmPassword">Confirm Password</label>
                <input type="text" class="form-control" asp-for="RegModel.ConfirmPassword" />
                <span asp-validation-for="RegModel.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
        </form>
          

        </div>
    </div>

</div>